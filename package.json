{
  "name": "connpass-watcher",
  "version": "0.1.0",
  "description": "Monitor connpass events for speaking opportunities and interests",
  "type": "module",
  "bin": {
    "connpass-watcher": "./dist/index.js"
  },
  "scripts": {
    "build": "bun scripts/build.ts",
    "dev": "bun --watch src/index.ts",
    "start": "bun dist/index.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@google/generative-ai": "^0.24.1",
    "better-sqlite3": "^11.7.0",
    "bottleneck": "^2.19.5",
    "commander": "^13.1.0",
    "date-fns": "^4.1.0",
    "googleapis": "^146.0.0",
    "node-schedule": "^2.1.1",
    "openai": "^6.15.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/better-sqlite3": "^7.6.12",
    "@types/bun": "^1.3.5",
    "@types/node": "^22.12.0",
    "@types/node-schedule": "^2.1.7",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
